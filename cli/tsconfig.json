{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "lib": [
      "es2017"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "dist",
    "strict": true,
    "target": "es2017",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "src",
    "paths": {
      "@towercg2/server": ["../server/dist"],
      "@towercg2/client": ["../client/dist"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ]
}
