{
  "name": "@towercg2/client",
  "description": "The client (NodeJS or browser) for the TowerCG2 video overlay system.",
  "author": "Ed Ropple <ed+towercg2@edropple.com> (https://edboxes.com)",
  "license": "AGPL-3.0",
  "homepage": "https://github.com/towercg2/towercg2",
  "bugs": "https://github.com/towercg2/towercg2/issues",
  "keywords": [
    "obs",
    "streaming",
    "twitch",
    "nodecg",
    "xsplit",
    "overlays",
    "vmix",
    "wirecast",
    "miracast",
    "mixer"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/towercg2/towercg2"
  },
  "version": "0.1.1",
  "main": "dist",
  "files": [
    "*"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "precommit": "npm run test",
    "prepush": "npm run test",
    "test": "tslint --project . && jest",
    "watch": "tsc --watch --preserveWatchOutput"
  },
  "dependencies": {
    "eventemitter2": "5.0.1",
    "lodash": "4.17.10",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "@types/lodash": "4.14.112",
    "@types/socket.io-client": "1.4.32",
    "@types/uuid": "3.4.3",
    "husky": "0.14",
    "jest": "22.0",
    "ts-jest": "22.4.1",
    "tslint": "5.9.1",
    "typescript": "2.8.4"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
