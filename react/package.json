{
  "name": "@towercg2/react",
  "version": "0.1.0",
  "private": true,
  "main": "dist",
  "files": [
    "*"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "precommit": "npm run test",
    "prepush": "npm run test",
    "test": "tslint --project . && jest",
    "watch": "tsc --watch --preserveWatchOutput"
  },
  "dependencies": {},
  "devDependencies": {
    "@towercg2/client": "0.1.0",
    "@types/react": "^16.4.6",
    "husky": "0.14",
    "jest": "22.0",
    "react": "~16.4.1",
    "ts-jest": "22.4.1",
    "tslint": "5.9.1",
    "typescript": "2.8.4"
  },
  "peerDependencies": {
    "react": "~16.4.1",
    "@towercg2/client": "0.1.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
